	<script>
// Thời gian làm bài từ server
function countdown(minutes){
	alert("Thời gian làm bài của bạn là: " + minutes + " phút");
	let seconds = minutes * 60;
	
	let countdownInterval = setInterval(function (){
		//Thân hàm
		let minutesLeft = Math.floor(seconds / 60); // 65/60 ~ 1.083 --> 1
		let secondsLeft = seconds % 60; // 65 % 60 = 5;
		//Format second : hiện số giây theo định dạng 01 02 03 ...
		let prefixMinuteFormat = minutesLeft < 10 ? "0" : "";
		let prefixSecondFormat = secondsLeft < 10 ? "0" : "";
		
		let displayTime = `${prefixMinuteFormat}${minutesLeft}:${prefixSecondFormat}${secondsLeft}`;
		
		console.log("Đang đếm:", displayTime);
		
		//Cập nhật vào phần tử HTML có id là timerDisplay
		document.getElementById("timerDisplay").innerText = `Thời gian còn lại: ${displayTime}`;
		
		if (seconds <= 0){
			clearInterval(countdownInterval);
			document.getElementById("timerDisplay").innerText = "Đã hết thời gian làm bài!";
			alert("Hết thời gian");
		} else{
			seconds--;
		}
	}, 1000);	
}

//Kiểm tra và gọi countdown
const raw = "${thoigianlambai}".trim();
const minutes = isNaN(raw) ? 0 : Number(raw);
console.log("Thoigian truyền từ JSP:", raw);
console.log("minutes dùng cho countdown:", minutes);

if (minutes > 0) {
    countdown(minutes);
} else {
    document.getElementById("timerDisplay").innerText = "Không có dữ liệu thời gian!";
}

</script>
