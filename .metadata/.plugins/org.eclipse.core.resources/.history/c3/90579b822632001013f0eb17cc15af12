	<c:forEach items="${listS}" var="o">
		${o.maHS} , 
		${o.tenHS} ,
		<c:if test="${o.gioiTinh == false}">
			<c:out value="Nam" />
		</c:if>
		<c:if test="${o.gioiTinh == true}">
			<c:out value="Nữ" />
		</c:if> ,
		${o.ngaySinh} , 
		${o.lop} ,
		<a href="updateStudent?mahs=${o.maHS}">Sửa</a> , 
		<a href="#" onclick="showMess('${o.maHS}')">Xóa</a>
		<br>
	</c:forEach>
